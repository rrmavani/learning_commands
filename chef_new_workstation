sudo apt-get -y install curl
curl https://omnitruck.chef.io/install.sh | sudo bash -s -- -P chefdk -c stable -v 2.0.28
sudo apt-get install git
git config --global user.name "rushabh mavani"
git config --global user.email "rrmavani@gmail.com"


mkdir ~/learn-chef/.chef
cd ~/learn-chef/.chef
Download key from chef manager -- Administration > Organizations > "Your Org" > Reset Validation Key
Download knife config from chef manager -- Administration > Organizations > "Your Org" > Generate Knife Config
knife ssl check -- This will check connectivity with chef server
